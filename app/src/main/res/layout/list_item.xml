<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    android:background="@android:color/background_light"
    android:padding="8dp">

    <TextView
        android:id="@+id/list_item_name"
        style="@style/TextStyle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:text="Donuts" />

    <TextView
        android:id="@+id/list_item_price"
        style="@style/TextStyle"
        android:layout_below="@id/list_item_name"
        tools:text="3.50" />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/primary_text_light"
        android:text="@string/quantity_text"/>

    <TextView
        android:id="@+id/list_item_quantity"
        style="@style/TextStyle"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/quantity_text_view"
        tools:text="0" />

    <TextView
        android:id="@+id/list_item_supplier_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/list_item_price"
        android:textColor="@android:color/primary_text_light"
        tools:text="Jerry's Bakery" />

    <TextView
        android:id="@+id/list_item_supplier_phone"
        style="@style/TextStyle"
        android:layout_alignEnd="@id/list_item_supplier_name"
        android:layout_below="@id/list_item_supplier_name"
        tools:text="12345 - 67890" />

    <Button
        android:id="@+id/btn_sale"
        style="@style/TextStyle"
        android:layout_below="@id/list_item_price"
        android:background="@android:color/holo_green_light"
        android:focusable="false"
        android:text="@string/btn_sale"
        android:textColor="@android:color/secondary_text_light" />
</RelativeLayout>